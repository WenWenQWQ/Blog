<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Dashboard << Admin</title>
    <link rel="stylesheet" href="../static/css/index.css">
    <link rel="stylesheet" href="../static/vendors/font-awesome/css/font-awesome.css">
    <link rel="stylesheet" href="../static/css/profile.css">
    <link rel="stylesheet" href="../static/css/post.css">
    <link rel="stylesheet" href="../static/css/categories.css">
</head>
<body>
<div class="main">
    <%- include('nav.ejs') -%>
    <div class="container">
        <div class="page-title">
            <h1>分类目录</h1>
        </div>
        <div class="fragment">
            <form action="/category" method="post">
                <h2>添加新分类目录</h2>
                <div class="form-group">
                    <label for="name">名称</label>
                    <input type="text" id="name" name="catename" placeholder="名称">
                </div>
                <div class="form-group">
                    <button class="btn-add">添加</button>
                </div>
            </form>
        </div>
        <div class="page-action">
            <a href="/cbdelete" class="delete-btn" style="display: none;">批量删除</a>
        </div>
        <table class="article" cellspacing="0" cellpadding="8px">
            <thead>
            <tr>
                <th><input type="checkbox"></th>
                <th>名称</th>
                <th>操作</th>
            </tr>
            </thead>
            <tbody>
            <% categories.forEach(function(category){%>
            <tr data-id="<%=category._id%>">
                <td><input type="checkbox"></td>
                <td><%=category.catename%></td>
                <td>
                    <a href="/categoryDelete?id=<%=category._id%>" class="operation delete">删除</a>
                </td>
            </tr>
            <% })%>
            </tbody>
        </table>
    </div>
</div>
<%- include('aside.ejs') -%>
<script src="../static/vendors/jquery/jquery.js" type="text/javascript"></script>
<script src="../static/js/index.js"></script>
<script src="../static/js/check.js"></script>
</body>
</html>