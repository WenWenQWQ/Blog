<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Dashboard << Admin</title>
    <link rel="stylesheet" href="../static/css/index.css">
    <link rel="stylesheet" href="../static/vendors/font-awesome/css/font-awesome.css">
    <link rel="stylesheet" href="../static/css/profile.css">
    <link rel="stylesheet" href="../static/css/post.css">
</head>
<body>
<div class="main">
    <%- include('nav.ejs') -%>
    <div class="container">
        <div class="page-title">
            <h1>用户信息</h1>
        </div>
        <div class="page-action">
            <a href="/customers" class="delete-btn" style="display: none;">批量删除</a>
            <form action="/customers" class="form-inline">
                <input type="text" placeholder="用户名" name="username">
                <button>查询</button>
            </form>
            <ul class="pagination">
                <%for(var i=begin;i<=end;i++){%>
                <li class="<%=i==activePage? 'active':''%>"><a href="/comments?page=<%=i%>"><%=i%></a></li>
                <%}%>
            </ul>
        </div>
        <table class="article" cellspacing="0" cellpadding="8px">
            <thead>
            <tr>
                <th><input type="checkbox"></th>
                <th>头像</th>
                <th>用户名</th>
                <th>昵称</th>
                <th>邮箱</th>
                <th>简介</th>
                <th>身份</th>
                <th>操作</th>
            </tr>
            </thead>
            <tbody>
            <% customers.forEach(function (admin) {%>
            <tr data-id="<%=customers._id%>">
                <td><input type="checkbox"></td>
                <td><%=customers.userImg%></td>
                <td><%=customers.username%></td>
                <td><%=customers.name%></td>
                <td><%=customers.email%></td>
                <td><%=customers.profile%></td>
                <td>用户</td>
                <td>
                    <a href="/customers?id=<%=admin._id%>" class="operation delete">删除</a>
                </td>
            </tr>
            <%})%>
            </tbody>
        </table>
    </div>
</div>
<%- include('aside.ejs') -%>
<script src="../static/vendors/jquery/jquery.js" type="text/javascript"></script>
<script src="../static/js/index.js"></script>
<script src="../static/js/check.js"></script>
</body>
</html>